<UserControl
   x:Class="ValveSpriteSheetUtil.Views.UserControls.TemplatesFolderDialog"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="clr-namespace:ValveSpriteSheetUtil.Views.UserControls"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   Margin="4,4,4,4"
   mc:Ignorable="d">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
         <RowDefinition Height="25" />
      </Grid.RowDefinitions>

      <StackPanel
         x:Name="ButtonStackPanel"
         Grid.Row="1"
         Grid.RowSpan="1"
         HorizontalAlignment="Right"
         Orientation="Horizontal" />
      <TextBox
         x:Name="MessageTextBlock"
         Grid.Row="0"
         Grid.RowSpan="1"
         HorizontalContentAlignment="Center"
         VerticalContentAlignment="Center"
         Background="{x:Null}"
         BorderBrush="{x:Null}"
         IsReadOnly="True"
         Text=""
         TextWrapping="Wrap">
         <TextBox.Foreground>
            <SolidColorBrush Color="{DynamicResource Text.Secondary}" />
         </TextBox.Foreground>
      </TextBox>
   </Grid>
</UserControl>
